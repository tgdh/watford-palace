@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "MasterSpektrix.cshtml";

	var webId = Model.Content.GetPropertyValue<string>("membershipID");
	var hasWebId = !String.IsNullOrWhiteSpace(webId);

	var src = "";
	if (hasWebId) {
		src = "https://system.spektrix.com/watfordpalace/website/memberships.aspx?resize=true&Attribute_WebId=" + webId;
	} else {
		src = "https://system.spektrix.com/watfordpalace/website/memberships.aspx?resize=true";
	}
}

<iframe
  name="SpektrixIFrame"
  id="SpektrixIFrame"
  frameborder="0"
  onload="scroll(0,0);"
  src="@src"
  style="width: 100%; max-width: 100rem; margin: 0 auto; display: block; height: 1000px;">
</iframe>
