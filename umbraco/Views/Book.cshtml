@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "MasterSpektrix.cshtml";

    string instanceId = Request.QueryString["id"];
    @* string eventId = Request.QueryString["eventId"]; *@
}

