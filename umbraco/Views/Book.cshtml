@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "MasterSpektrix.cshtml";

    string instanceId = Request.QueryString["id"];
    string eventId = Request.QueryString["eventId"];
}

@*
	secure url:
	https://system.spektrix.com/hulltruck/website/secure/myaccount.aspx
*@

@if( instanceId != null ) {
	<iframe
	  name="SpektrixIFrame"
	  id="SpektrixIFrame"
	  frameborder="0"
	  src="http://system.spektrix.com/watfordpalace_run1/website/chooseseats.aspx?resize=true&EventInstanceId=@instanceId"
	  style="width: 100%; max-width: 100rem; margin: 0 auto; display: block; height: 1000px;">
	</iframe>
}
@if( eventId != null ) {
	@Html.Partial("Component/book-tickets")
}


