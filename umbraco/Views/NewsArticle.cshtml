@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "MasterNews.cshtml";
	var homePage = CurrentPage.Site();
	var settings = homePage.FirstChild("Settings");

}

<section class="o-wrap o-section o-wrap--small">
	<h1>@CurrentPage.Name</h1>
	@if( CurrentPage.HasValue("coverImage") ){
		<figure class="o-news-header">
			<img src="@Umbraco.Media(CurrentPage.coverImage.ToString()).GetCropUrl("umbracoFile", "open-graph")" alt="@CurrentPage.Name"/>
			@if( Umbraco.Media(CurrentPage.coverImage).HasValue("caption") )
			{
				<figcaption>@Umbraco.Media(CurrentPage.coverImage).caption</figcaption>
			}
		</figure>
	}
	
	<p class="c-news__release-date">@CurrentPage.releaseDate.ToString("d MMMM yyyy")</p>
	<p class="o-news=excerpt"><strong>@CurrentPage.postExcerpt</strong></p>
	@CurrentPage.bodyText
</section>

